<p id="notice"><%= notice %></p>

<h1>Histograms</h1>

<table>
  <thead>
    <tr>
      <th>Hist</th>
      <th>Length</th>
      <th>Word length</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @histograms.each do |histogram| %>
      <tr>
        <td><%= histogram.hist %></td>
        <td><%= histogram.length %></td>
        <td><%= histogram.word_length %></td>
        <td><%= link_to 'Show', histogram %></td>
        <td><%= link_to 'Edit', edit_histogram_path(histogram) %></td>
        <td><%= link_to 'Destroy', histogram, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Histogram', new_histogram_path %>
