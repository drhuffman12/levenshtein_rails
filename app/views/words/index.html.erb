<p id="notice"><%= notice %></p>

<h1>Words</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Length</th>
      <th>Word length id</th>
      <th>Word length</th>
      <th>Histogram id</th>
      <th>Histogram</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @words.each do |word| %>
      <tr>
        <td><%= word.name %></td>
        <td><%= word.length %></td>
        <td><%= word.word_length[:id] if word.word_length %></td>
        <td><%= word.word_length[:length] if word.word_length %></td>
        <td><%= word.histogram[:id] if word.histogram %></td>
        <td><%= word.histogram[:hist] if word.histogram %></td>
        <td><%= link_to 'Show', word %></td>
        <td><%= link_to 'Edit', edit_word_path(word) %></td>
        <td><%= link_to 'Destroy', word, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

